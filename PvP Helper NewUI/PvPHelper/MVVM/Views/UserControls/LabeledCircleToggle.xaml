<UserControl x:Class="PvPHelper.MVVM.Views.UserControls.LabeledCircleToggle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PvPHelper.MVVM.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ToggleButton Style="{StaticResource CircleToggle}"/>
        <TextBlock Grid.Column="1" Margin="20,0,0,0" Text="{Binding Label}" FontSize="32" d:Text="Label" Foreground="{DynamicResource ForegroundBrush}" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
